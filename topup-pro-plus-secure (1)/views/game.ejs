<% layout('layout') -%><a href='/' class='text-sm text-purple-600 hover:underline'>← Kembali</a><div class='card bg-white p-4 mt-4'><h1 class='text-2xl'><%= game.name %></h1><form action='/checkout' method='POST'><input type='hidden' name='_csrf' value='<%= csrfToken %>'/><input type='hidden' name='game_slug' value='<%= game.slug %>'/><input type='hidden' name='game_name' value='<%= game.name %>'/><div class='mt-3'><label>Player ID</label><input name='player_id' required class='w-full border rounded px-2 py-2'/></div><div class='mt-3'><label>Pilih Nominal</label><div class='grid grid-cols-2 gap-2 mt-2'><% denoms.forEach(d=>{ %><label class='border p-2 rounded'><div><%= d.label %></div><div class='text-xs text-gray-500'><%= rupiah(d.price) %></div><input type='radio' name='denom_label' value='<%= d.label %>' required/><input type='hidden' name='denom_value' value='<%= d.value %>'/><input type='hidden' name='price' value='<%= d.price %>'/></label><% }) %></div></div><div class='mt-3'><label>Metode</label><select name='pay_method' class='w-full border rounded px-2 py-2'><% channels.forEach(c=>{ %><option value='<%= c.method %>'><%= c.method %> (+<%= rupiah(c.amount) %>)</option><% }) %></select></div><div class='mt-4'><button class='px-4 py-2 bg-purple-700 text-white rounded'>Bayar</button></div></form></div>