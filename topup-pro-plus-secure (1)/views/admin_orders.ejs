<% layout('layout') -%><h1 class='text-2xl'>Orders</h1><div class='card bg-white p-4 mt-4'><table class='min-w-full'><thead><tr><th>Waktu</th><th>Order</th><th>Game</th><th>Player</th><th>Harga</th><th>Status</th></tr></thead><tbody><% orders.forEach(o=>{ %><tr><td><%= new Date(o.created_at).toLocaleString('id-ID') %></td><td><a href='/orders/<%= o.id %>' class='text-blue-600'><%= o.id %></a></td><td><%= o.game_name %></td><td><%= o.player_id %></td><td><%= rupiah(o.price) %></td><td><span class='badge'><%= o.status %></span></td></tr><% }) %></tbody></table></div>