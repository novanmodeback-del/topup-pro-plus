<% layout('layout') -%><h1 class='text-2xl font-semibold'>Markups</h1><div class='card bg-white p-4 mt-4'><table class='min-w-full'><thead><tr><th>Method</th><th>Amount</th><th>Aksi</th></tr></thead><tbody><% markups.forEach(m=>{ %><tr><td><%= m.method %></td><td><%= m.amount %></td><td><form action='/admin/markups/<%= m.id %>' method='POST'><input type='hidden' name='_csrf' value='<%= csrfToken %>'/><input name='amount' value='<%= m.amount %>' class='w-24 border rounded px-2'/><button class='ml-2 px-2 py-1 bg-purple-700 text-white rounded'>Simpan</button></form></td></tr><% }) %></tbody></table></div>